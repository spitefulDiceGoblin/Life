<?xml version="1.0" encoding="utf-8"?>
<!-- TODO use resource values-->
<resources>

    <style name="AppTheme.NoTopBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Theme.Life.NoActionBar.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
    </style>

    <style name="game_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:shadowColor">#E9B32958</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#E91E63</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/ubuntu_mono</item>
    </style>

    <style name="game_subtitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#E91E63</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ubuntu_mono</item>
    </style>

    <style name="standard_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/ubuntu_mono</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>